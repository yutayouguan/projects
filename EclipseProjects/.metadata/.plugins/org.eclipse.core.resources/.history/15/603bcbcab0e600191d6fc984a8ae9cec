class TricketSales implements Runnable {
	static int num = 20;

	@Override
	public void run() {
	while (true) {
		
	synchronized ("ğŸ”’") {
		

		if (num>0) {
			System.out.println(Thread.currentThread().getName()+"å–å‡ºç¬¬"+num+"å¼ ç¥¨");
		}
		else {
			System.out.println("ç¥¨å”®ç½„äº†ï¼ï¼");
			break;
		}
	}
	}
	}
	
public class Demo1{
	public static void main(String[] args) {
		TricketSales tricketSales = new TricketSales();
		Thread thread1 =new Thread(tricketSales,"çª—å£1");
		Thread thread2 =new Thread(tricketSales,"çª—å£2");
		Thread thread3 =new Thread(tricketSales,"çª—å£3");
		thread1.start();
		thread2.start();
		thread3.start();
	
	
	}
}
