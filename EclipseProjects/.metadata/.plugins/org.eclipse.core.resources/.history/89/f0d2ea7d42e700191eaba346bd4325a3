package mi.yike.thread;

/**
 * @author wangmeng 守护线程（后台线程）：主程序结束，它也结束
 *
 */

class Update implements Runnable {
	boolean flag = true;

	@Override
	public synchronized void run() {
		while (flag) {
			int i = 0;
			for (i = 0; i <= 100; i++) {
				System.out.println(Thread.currentThread().getName() + "已经完成" + i + "%.");
				try {
					this.wait();
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				if (i == 100) {
					System.out.println("下载完成，将自动完成安装更新！");
					this.flag = false;

				}
			}

		}
	}
}

public class Demo3 {
	public static void main(String[] args) {
		Update update = new Update();
		Thread thread = new Thread(update, "更新");
		thread.setDaemon(true); // 设置为守护进程
		thread.start();
//		synchronized (update) {
//			update.notify();
//		}
		thread.interrupt();//
		

		for (int i = 0; i < 10; i++) {
			System.out.println(Thread.currentThread().getName() + "i=" + i);
			try {
				Thread.sleep(500);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}

}
